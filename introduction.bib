isbn = {1755-6910},
issn = {00804568},
journal = {Transactions of the Royal Society of Edinburgh},
number = {2},
pages = {399--433},
pmid = {12019254},
title = {{XV.—The Correlation between Relatives on the Supposition of Mendelian Inheritance}},
volume = {52},
year = {1919}
}
