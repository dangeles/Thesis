issn = {1535-9476},
journal = {Molecular {\&} Cellular Proteomics},
number = {8},
pages = {561--566},
pmid = {12376571},
title = {{Roles for the Two-hybrid System in Exploration of the Yeast Protein Interactome}},
volume = {1},
year = {2002}
}
